package src;

import java.awt.Point;

import javax.swing.JPanel;

import src.MenuCirculaire.MenuItem;

public class Model {

	MenuItem items[];
	JPanel panel;
	Point coord_circ;

	double pi = Math.PI;
	
	public Point polar(double t, double d) {	      
	      double x = d * Math.cos(t);
	      double y = d * Math.sin(t);
	      
	      return new Point((int) x,(int) y);
	}
	
	public Model() {
		
		this.coord_circ[] = {
				polar(pi,100), 
				polar(0,100), 
				polar(pi*3/2,100), 
				polar(pi*1/2,100),
				polar(pi*3/4,100), 
				polar(pi*1/4,100), 
				polar(pi*7/4,100),  
				polar(pi*5/4,100)
			};
		
	}
	
}
